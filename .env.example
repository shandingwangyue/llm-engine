# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=2
LOG_LEVEL=info

# 模型配置
MODEL_DIR=./models
DEFAULT_MODEL=qwen-7b-chat
AUTO_LOAD_MODELS=true

# 性能配置
MAX_CACHE_SIZE=1000
CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=20
MAX_TOKENS=2048

# 内存优化
USE_MMAP=true
USE_MLOCK=false
N_THREADS=4
N_BATCH=512

# 监控配置
ENABLE_MONITORING=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# 安全配置

ENABLE_AUTH=false
RATE_LIMIT_PER_MINUTE=60

# 流式配置
STREAMING_ENABLED=true
STREAMING_CHUNK_SIZE=1
STREAMING_FLUSH_INTERVAL=0.1

# 模型特定配置
QWEN_CONTEXT_LENGTH=4096
GEMMA_CONTEXT_LENGTH=8192
LLAMA_CONTEXT_LENGTH=2048

# 可选：Redis配置
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false